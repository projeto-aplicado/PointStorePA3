<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GerenciarVendas">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#607D8B"
        android:orientation="horizontal"
        android:weightSum="100">

        <TextView
            android:id="@+id/tipo_de_ponto_para_venda"
            android:layout_width="121dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Ponto"
            android:textAlignment="center"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/quantidade_de_pontos_para_venda"
            android:layout_width="131dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Quantidade"
            android:textAlignment="center"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/preco_da_venda_para_anuncio"
            android:layout_width="114dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="PreÃ§o"
            android:textAlignment="center"
            android:textSize="18dp" />

    </LinearLayout>

    <EditText
        android:id="@+id/ed_quantidade"
        android:layout_width="343dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="122dp"
        android:inputType="number"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="183dp"
        android:text="@string/instrucao_de_uso_gerenciar_venda" />

    <Button
        android:id="@+id/buttonGravarDados"
        android:layout_width="362dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="63dp"
        android:background="@drawable/screen_border"
        android:text="Gravar"
        android:textColor="#fff"
    />

    <ListView
        android:id="@+id/listDeSuasViewVendas"
        android:layout_width="match_parent"
        android:layout_height="225dp"


        android:layout_above="@+id/textView5"
        android:layout_alignParentStart="true" />


</RelativeLayout>