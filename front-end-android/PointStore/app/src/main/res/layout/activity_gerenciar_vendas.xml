<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GerenciarVendas">

    <ListView
        android:id="@+id/listViewVendas"
        android:layout_width="match_parent"
        android:layout_height="254dp"
        android:layout_above="@+id/ed_quantidade"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />

    <EditText
        android:id="@+id/ed_quantidade"
        android:layout_width="343dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="122dp"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ed_quantidade"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/ed_quantidade"
        android:text="@string/instrucao_de_uso_gerenciar_venda" />

    <Button
        android:id="@+id/buttonGravarDados"
        android:layout_width="362dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="63dp"
        android:background="@drawable/screen_border"
        android:text="Salvar"
        android:textColor="#fff" />


</RelativeLayout>