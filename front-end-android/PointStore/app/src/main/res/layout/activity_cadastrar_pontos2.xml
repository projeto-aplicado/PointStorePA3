<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ListViewAtividade"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.pointstore.CadastrarSeusPontos">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="340dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#607D8B"
        android:weightSum="100"
        android:id="@+id/linearLayout">


        <TextView
            android:id="@+id/textview4"
            android:layout_width="171dp"
            android:layout_height="wrap_content"

            android:layout_weight="33"
            android:gravity="center"
            android:text="Ponto"
            android:textAlignment="center"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/textview5"
            android:layout_width="191dp"
            android:layout_height="wrap_content"
            android:layout_weight="33"
            android:gravity="center"
            android:text="Quantidade"
            android:textAlignment="center"
            android:textSize="24sp"/>

    </LinearLayout>

    <ListView
        android:id="@+id/listViewDePontos"
        android:layout_width="340dp"
        android:layout_height="110dp"
        android:layout_alignLeft="@+id/linearLayout"
        android:layout_alignStart="@+id/linearLayout"
        android:layout_below="@+id/linearLayout" />

    <Button
        android:id="@+id/buttonGravarDados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ed_quantidade"
        android:layout_centerHorizontal="true"
        android:background="@drawable/screen_border"
        android:textColor="#fff"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="47dp"
        android:text="Gravar" />

    <TextView
        android:id="@+id/pontoSelecionado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:text="Ponto"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/ed_quantidade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pontoSelecionado"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/listViewDePontos"
        android:layout_alignStart="@+id/listViewDePontos"
        android:layout_below="@+id/listViewDePontos"
        android:layout_marginTop="14dp"
        android:text="@string/instrucao_de_uso" />

</RelativeLayout>
