<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">

        <TextView
            android:id="@+id/tipo_de_ponto_venda"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ponto"
            android:textSize="18dp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/quantidade_de_pontos_da_venda_venda"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Quantidade"
            android:layout_marginLeft="40dp"
            android:textSize="18dp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/preco_da_compra_realizada_venda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="PreÃ§o"
            android:layout_marginLeft="70dp"
            android:textAlignment="center"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/preco_zero"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=",00"
            android:layout_toRightOf="@+id/preco_da_compra_realizada"
            android:textSize="18dp"
            android:gravity="start" />


    </LinearLayout>
</LinearLayout>